<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FileView.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back2main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to main" />

        <Button
            android:id="@+id/text2speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tts baby" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/fileName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textViewMarkdown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fileName"
            app:layout_constraintBottom_toTopOf="@id/AITextView" />

        <EditText
            android:id="@+id/EditMarkdown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fileName"
            app:layout_constraintBottom_toTopOf="@id/AITextView" />

        <TextView
            android:id="@+id/AITextView"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="@color/white"
            android:gravity="start|top"
            android:text="AI Usage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar" />

        <EditText
            android:id="@+id/AIChatBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Input Prompt Here"
            android:background="@color/white"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/liveChatButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Chat"
            app:layout_constraintStart_toEndOf="@id/rejectButt"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/summarizeButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summarize"
            app:layout_constraintStart_toEndOf="@id/liveChatButt"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/acceptButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar" />

        <Button
            android:id="@+id/rejectButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            app:layout_constraintStart_toEndOf="@+id/acceptButt"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar" />

        <Button
            android:id="@+id/voiceButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice"
            app:layout_constraintStart_toEndOf="@+id/rejectButt"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
