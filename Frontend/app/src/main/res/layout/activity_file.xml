<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FileView.MainActivity">

    <Button
        android:id="@+id/back2main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to main" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="683dp">

        <EditText
            android:id="@+id/fileName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="4dp" />

        <EditText
            android:id="@+id/textViewMarkdown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Name"
            app:layout_constraintBottom_toTopOf="@+id/summarizeButt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/EditMarkdown"
            android:layout_width="0dp"
            android:layout_height="643dp"
            android:layout_marginBottom="1dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="@+id/AIChatBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/AITextView"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginBottom="44dp"
            android:background="@color/white"
            android:gravity="start|top"
            android:text="AI Usage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/AIChatBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="start|top"
            android:text="Input Prompt Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AITextView" />

        <Button
            android:id="@+id/liveChatButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="19dp"
            android:text="Live Chat"
            app:layout_constraintBottom_toTopOf="@+id/AIChatBar"
            app:layout_constraintStart_toStartOf="@+id/summarizeButt" />

        <Button
            android:id="@+id/summarizeButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Summarize"
            app:layout_constraintBaseline_toBaselineOf="@+id/liveChatButt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/voiceButt" />

        <Button
            android:id="@+id/acceptButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="Accept"
            app:layout_constraintEnd_toStartOf="@+id/voiceButt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMarkdown" />

        <Button
            android:id="@+id/rejectButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            app:layout_constraintBaseline_toBaselineOf="@+id/voiceButt"
            app:layout_constraintStart_toStartOf="@+id/voiceButt" />

        <Button
            android:id="@+id/voiceButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Voice"
            app:layout_constraintEnd_toStartOf="@+id/summarizeButt"
            app:layout_constraintStart_toEndOf="@+id/acceptButt"
            app:layout_constraintTop_toBottomOf="@+id/textViewMarkdown" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>