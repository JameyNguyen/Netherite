<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:paddingRight="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/folder_item_background"
    android:gravity="center_vertical"
    android:elevation="4dp"> <!-- higher elevation compared to notes -->

    <ImageView
        android:id="@+id/folderIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_closed_folder_f" />

    <!-- Folder Name Text -->
    <TextView
        android:id="@+id/folderTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Folder Name"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:background="?attr/selectableItemBackground"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete_note"
        android:padding="8dp"
        android:src="@drawable/ic_delete" />
</LinearLayout>